<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/waitingFragment">

    <fragment
        android:id="@+id/waitingFragment"
        android:name="com.roostersoft.gallozafferano.WaitingFragment"
        android:label="fragment_waiting"
        tools:layout="@layout/fragment_waiting" >
        <action
            android:id="@+id/action_waitingFragment_to_errorFragment"
            app:destination="@id/errorFragment"
            app:popUpTo="@id/waitingFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_waitingFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/waitingFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/errorFragment"
        android:name="com.roostersoft.gallozafferano.ErrorFragment"
        android:label="fragment_error"
        tools:layout="@layout/fragment_error" />
    <fragment
        android:id="@+id/listFragment"
        android:name="com.roostersoft.gallozafferano.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/action_listFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.roostersoft.gallozafferano.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="recipe"
            app:argType="com.roostersoft.gallozafferano.model.RecipeWithIdAndImage" />
    </fragment>
</navigation>